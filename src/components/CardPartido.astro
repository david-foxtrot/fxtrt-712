---
const { campeonato, timeCasa, timeFora, placarCasa, placarFora, info } = Astro.props;
---
<div class="flex items-center justify-between p-4 md:p-6">
    
    <div class="flex flex-1 justify-start items-center gap-3">
        <span class="text-sm md:text-lg font-bold hidden sm:inline">{timeCasa.display_name || timeCasa.time}</span>
        <span class="text-sm md:text-lg font-bold sm:hidden">{timeCasa.sigla}</span>
        <img src={timeCasa.logo} alt={`Logo do ${timeCasa.time}`} class="w-8 h-8 md:w-10 md:h-10" />
    </div>

    <div class="text-center px-2">
        {placarCasa !== null && placarFora !== null ? (
            <div class="text-2xl md:text-4xl font-bold">
                <span>{placarCasa}</span>
                <span class="text-xl md:text-3xl font-light text-gray-500 mx-1 md:mx-2">x</span>
                <span>{placarFora}</span>
            </div>
        ) : (
            <div class="text-2xl md:text-4xl font-light text-gray-400">
                <span>—</span>
                <span class="text-xl md:text-3xl font-light text-gray-500 mx-1 md:mx-2">x</span>
                <span>—</span>
            </div>
        )}
        <p class="text-xs font-mono text-gray-400 mt-2 whitespace-nowrap">{info}</p>
    </div>

    <div class="flex flex-1 justify-end items-center gap-3">
        <img src={timeFora.logo} alt={`Logo do ${timeFora.time}`} class="w-8 h-8 md:w-10 md:h-10" />
        <span class="text-sm md:text-lg font-bold hidden sm:inline">{timeFora.display_name || timeFora.time}</span>
        <span class="text-sm md:text-lg font-bold sm:hidden">{timeFora.sigla}</span>
    </div>

</div>